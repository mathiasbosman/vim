<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://maven.apache.org/POM/4.0.0"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <artifactId>vim</artifactId>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <groupId>org.apache.maven.plugins</groupId>
      </plugin>
      <plugin>
        <artifactId>jacoco-maven-plugin</artifactId>
        <configuration>
          <excludes>
            <!-- main application class -->
            <exclude>**/VimApplication.*</exclude>
            <!-- domain classes -->
            <exclude>**/domain/**</exclude>
            <!-- security -->
            <exclude>**/security/**</exclude>
          </excludes>
        </configuration>
        <executions>
          <execution>
            <goals>
              <goal>prepare-agent</goal>
            </goals>
            <id>prepare-agent</id>
          </execution>
          <execution>
            <goals>
              <goal>report</goal>
            </goals>
            <id>report</id>
          </execution>
        </executions>
        <groupId>org.jacoco</groupId>
        <version>0.8.8</version>
      </plugin>
    </plugins>
  </build>

  <dependencyManagement>
    <dependencies>
      <!-- testing -->
      <dependency>
        <artifactId>postgresql</artifactId>
        <groupId>org.testcontainers</groupId>
        <scope>test</scope>
        <version>1.17.1</version>
      </dependency>
      <dependency>
        <artifactId>junit-jupiter</artifactId>
        <groupId>org.testcontainers</groupId>
        <scope>test</scope>
        <version>1.17.1</version>
      </dependency>
    </dependencies>
  </dependencyManagement>
  <description>vim</description>
  <distributionManagement>
    <!-- Github distribution -->
    <repository>
      <id>github</id>
      <name>GitHub Packages</name>
      <url>https://maven.pkg.github.com/mathiasbosman/vim</url>
    </repository>
  </distributionManagement>
  <groupId>be.mathiasbosman</groupId>
  <modelVersion>4.0.0</modelVersion>
  <modules>
    <module>vim-api</module>
  </modules>
  <name>vim</name>
  <packaging>pom</packaging>

  <parent>
    <artifactId>spring-boot-starter-parent</artifactId>
    <groupId>org.springframework.boot</groupId>
    <relativePath/>
    <version>2.7.1</version> <!-- lookup parent from repository -->
  </parent>

  <properties>
    <java.language.version>17</java.language.version>
    <maven.compiler.source>${java.language.version}</maven.compiler.source>
    <maven.compiler.target>${java.language.version}</maven.compiler.target>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <sonar.host.url>https://sonarcloud.io</sonar.host.url>
    <sonar.organization>mathiasbosman</sonar.organization>
  </properties>

  <version>0.0.1-SNAPSHOT</version>

</project>
